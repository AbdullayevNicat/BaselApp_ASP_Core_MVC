<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">
    <!-- Latest compiled and minified CSS -->

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link href="~/assets/css/dcalendar.picker.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/mediaQueries.css">
    <title>@ViewBag.Title</title>
</head>

<body>
    <!-- SIDEBAR SECTION START-->
    <section id="sideBar" class="jssideBar">
        <!-- Head -->
        <header>
            <a href="#">
                <h1>
                    <span>Wg</span>
                    <span class="jslogoText">Board</span>
                </h1>
            </a>
        </header>
        <!-- Navigation -->
        <nav>
            <ul class="nav nav-pills nav-fill flex-column">
                <li class="nav-item" data-toggle="collapse" data-target="#collapseFirstLi" aria-expanded="true"
                    aria-controls="collapseFirstLi">
                    <a class="nav-link" asp-action="Index" asp-controller="Account" asp-area="Admin">
                        <i class="fas fa-user-circle"></i>
                        <span>Account</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="collapse" data-target="#collapsesecondLi" aria-expanded="true"
                    aria-controls="collapsesecondLi">
                    <a class="nav-link" asp-action="Menu" asp-controller="Home" asp-area="Admin">
                        <i class="fas fa-leaf"></i>
                        <span>Menus</span>
                    </a>
                </li>

                <!-- thirdLi -->
                <li class="nav-item" data-toggle="collapse" data-target="#collapsethirdLi" aria-expanded="true"
                    aria-controls="collapsethirdLi">
                    <a class="nav-link" asp-controller="Slide" asp-action="Index">
                        <i class="fas fa-sliders-h"></i>
                        <span>Slide</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">
                        <i class="fab fa-product-hunt"></i>
                        <span>Product</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Category" asp-action="Index">
                        <i class="fas fa-align-left"></i>
                        <span>Category</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Color" asp-action="Index">
                        <i class="far fa-circle"></i>
                        <span>Color</span>
                    </a>
                </li>
            </ul>
        </nav>
    </section>
    <!-- SIDEBAR SECTION END-->
    <!-- MAIN SECTION START-->
    <main id="main" class="jsmain">
        <!-- Head Nav Section -->
        <nav class="head row">
            <!-- Left Section -->
            <div class="col-md-6 col-6 Left">
                <div class="navIcon">
                    <div class="close" id="close">
                        <i class="fas fa-times"></i>
                    </div>
                    <div class="open" id="open">
                        <i class="fas fa-bars"></i>
                    </div>
                </div>
                <div class="option">

                </div>
            </div>
            <!-- Right Section -->
            <div class="col-md-6 col-6 Right">
                <div class="userAll">
                    <form method="post" asp-action="Logout" asp-controller="Account">
                        <button style="display:inline-block" type="submit">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
        <!-- showNav -->
        <section class="showNav row">
            <i class="fas fa-home"></i>
            <a href="#">HOME</a>
            <span>></span>
            <a href="#">DASHBOARD</a>
            <span>></span>
            <p>MAIN PAGE</p>
        </section>



        @RenderBody()
    </main>
    <!-- MAIN SECTION END-->


    <script src="~/lib/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <script src="~/assets/js/dcalendar.picker.js"></script>

    <script src="~/assets/js/main.js"></script>

    @await Html.PartialAsync("_ValidationScriptPartial")

   
    <script>
        //calendar section
        $('#datepicker').dcalendar();

        $(document).ready(() => {
            $(window).scroll(function () {
                if ($(this).scrollTop() > 100) {
                    $('#scroll').fadeIn();
                } else {
                    $('#scroll').fadeOut();
                }
            });
            $('#scroll').click(function () {
                $("html, body").animate({ scrollTop: 0 }, 600);
                return false;
            });
        });

    </script>

</body>

</html>
