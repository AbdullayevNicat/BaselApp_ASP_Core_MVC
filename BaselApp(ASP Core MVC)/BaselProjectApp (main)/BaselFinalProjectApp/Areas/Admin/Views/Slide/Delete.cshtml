@using BaselFinalProjectApp.Models.PageModel.HomePageModel
@model List<SlideLanguage>

<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Header</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Footer</th>
            <th scope="col">Image</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Where(x => x.LanguageId == 1).Select(x => x.Header).SingleOrDefault()</td>
            <td>@Model.Where(x => x.LanguageId == 1).Select(x => x.Title).SingleOrDefault()</td>
            <td>@Model.Where(x => x.LanguageId == 1).Select(x => x.Description).SingleOrDefault()</td>
            <td>@Model.Where(x => x.LanguageId == 1).Select(x => x.Footer).SingleOrDefault()</td>
            <td>
                <img width="80" height="100" src="~/lib/image/@Model.Select(z => z.Slide.Image).FirstOrDefault()" />
            </td>
        </tr>
    </tbody>
</table>
<form asp-controller="Slide" asp-action="Delete" method="post">
    <input type="hidden" value="@Model.Select(z => z.Slide.Id).FirstOrDefault()" />
    <button type="submit" class="btn w-50 btn-dark ml-5 mb-3">Delete</button>
</form>
<a asp-controller="Slide" asp-action="Index" class="text-success w-50 btn btn-dark ml-5 mb-3">Back List</a>

